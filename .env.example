# Academic Assistant Environment Variables

# Application
NODE_ENV=development
PORT=3001
LOG_LEVEL=info

# API Keys
ANTHROPIC_API_KEY=your_anthropic_api_key_here
OPENAI_API_KEY=your_openai_api_key_here
SEMANTIC_SCHOLAR_API_KEY=your_semantic_scholar_api_key_here

# Database
DATABASE_URL=postgresql://postgres:password@localhost:5432/academic_assistant
REDIS_URL=redis://localhost:6379

# MCP Servers
LITERATURE_SEARCH_MCP_URL=http://localhost:8080
CITATION_MANAGER_MCP_URL=http://localhost:8081

# Feature Flags
ENABLE_LITERATURE_SEARCH=true
ENABLE_CITATION_MANAGER=true

# Security
JWT_SECRET=your_jwt_secret_here
ENCRYPTION_KEY=your_encryption_key_here_32_chars_long

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_DAY=1000
